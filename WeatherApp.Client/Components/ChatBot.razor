        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@media (max-width: 768px) {
        .chatbot-icon-btn {
            width: 56px;
            height: 56px;
            font-size: 1.3rem;
            bottom: 15px;
            right: 15px;
        }

        .chatbot-window {
            width: calc(100vw - 30px);
            right: 15px;
            bottom: 85px;
            max-height: calc(100vh - 120px);
        }
    }
</style>

@code {
    private List<ChatMessage> messages = new();
    private string inputMessage = string.Empty;
    private bool isLoading = false;
    private bool isOpen = false;
    private ElementReference messagesContainer;

    protected override async Task OnInitializedAsync()
    {
        // Add welcome message
        messages.Add(new ChatMessage
        {
            Text = "Hello! I'm your weather assistant. Ask me about weather in any city, forecasts, or temperatures!",
            IsUser = false,
            Timestamp = DateTime.Now
        });
    }

    private async Task SendMessage()
    {
        if (string.IsNullOrWhiteSpace(inputMessage) || isLoading)
            return;

        var userMessage = inputMessage.Trim();
        inputMessage = string.Empty;

        // Add user message
        messages.Add(new ChatMessage
        {
            Text = userMessage,
            IsUser = true,
            Timestamp = DateTime.Now
        });

        isLoading = true;
        StateHasChanged();
        await ScrollToBottom();

        try
        {
            var userId = SupabaseService.GetCurrentUser()?.Id;
            var response = await ChatbotService.SendMessageAsync(userMessage, userId);

            // Add bot response
            messages.Add(new ChatMessage
            {
                Text = response,
                IsUser = false,
                Timestamp = DateTime.Now
            });
        }
        catch (Exception ex)
        {
            messages.Add(new ChatMessage
            {
                Text = "Sorry, I encountered an error. Please try again.",
                IsUser = false,
                Timestamp = DateTime.Now
            });
            Console.WriteLine($"Chatbot error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
            await ScrollToBottom();
        }
    }

    private async Task HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !e.ShiftKey)
        {
            await SendMessage();
        }
    }

    private void ToggleChat()
    {
        isOpen = !isOpen;
        if (isOpen)
        {
            Task.Run(async () => await ScrollToBottom());
        }
    }

    private async Task ScrollToBottom()
    {
        try
        {
            await Task.Delay(100); // Small delay to ensure DOM is updated
            await JSRuntime.InvokeVoidAsync("eval", @"
                const container = arguments[0];
                if (container) {
                    container.scrollTop = container.scrollHeight;
                }
            ", messagesContainer);
        }
        catch
        {
            // Ignore JS errors
        }
    }

    private class ChatMessage
    {
        public string Text { get; set; } = string.Empty;
        public bool IsUser { get; set; }
        public DateTime Timestamp { get; set; }
    }
}
