@using WeatherApp.Client.Services
@inject ChatbotService ChatbotService
@inject SupabaseService SupabaseService
@inject IJSRuntime JSRuntime

<!-- Chatbot Icon Button -->
<button class="chatbot-icon-btn" @onclick="ToggleChat" title="Weather Assistant">
    <i class="bi bi-chat-dots-fill"></i>
</button>

<!-- Chatbot Window -->
@if (isOpen)
{
    <div class="chatbot-window">
        <div class="chatbot-header">
            <div class="d-flex align-items-center gap-2">
                <i class="bi bi-chat-dots-fill"></i>
                <span>Weather Assistant</span>
            </div>
            <button class="btn btn-sm btn-link text-white" @onclick="ToggleChat" @onclick:stopPropagation="true">
                <i class="bi bi-x-lg"></i>
            </button>
        </div>

        <div class="chatbot-messages" @ref="messagesContainer">
            @foreach (var message in messages)
            {
                <div class="message @(message.IsUser ? "user-message" : "bot-message")">
                    <div class="message-content">
                        @if (!message.IsUser)
                        {
                            <i class="bi bi-robot"></i>
                        }
                        <div class="message-text">@message.Text</div>
                    </div>
                    <div class="message-time">@message.Timestamp.ToString("HH:mm")</div>
                </div>
            }
            @if (isLoading)
            {
                <div class="message bot-message">
                    <div class="message-content">
                        <i class="bi bi-robot"></i>
                        <div class="message-text">
                            <span class="typing-indicator">
                                <span></span><span></span><span></span>
                            </span>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="chatbot-input">
            <input @bind="inputMessage" 
                   @bind:event="oninput"
                   @onkeydown="HandleKeyPress"
                   class="form-control"
                   placeholder="Ask me about weather..."
                   disabled="@isLoading" />
            <button class="btn btn-primary" @onclick="SendMessage" disabled="@isLoading || string.IsNullOrWhiteSpace(inputMessage)">
                @if (isLoading)
                {
                    <span class="spinner-border spinner-border-sm"></span>
                }
                else
                {
                    <i class="bi bi-send-fill"></i>
                }
            </button>
        </div>
    </div>
}

