@page "/users"
@attribute [Authorize]
@using Supabase.Gotrue
@inject SupabaseService SupabaseService
@inject SupabaseAuthStateProvider AuthStateProvider

<PageTitle>User Information</PageTitle>

<div class="container-fluid px-4 py-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex align-items-center mb-4">
                <i class="bi bi-people me-3" style="font-size: 2rem; color: var(--accent-primary);"></i>
                <div>
                    <h2 class="mb-0 fw-bold text-primary-modern">User Information</h2>
                    <p class="text-secondary-modern mb-0">View your account details</p>
                </div>
            </div>
            
            @if (isLoading)
            {
                <div class="text-center py-5">
                    <div class="loading-spinner mx-auto mb-3"></div>
                    <p class="text-secondary-modern mt-2">Loading user information...</p>
                </div>
            }
            else if (errorMessage != null)
            {
                <div class="modern-card">
                    <div class="alert alert-danger">
                        <p class="text-primary-modern mb-0">@errorMessage</p>
                    </div>
                </div>
            }
            else if (currentUserInfo != null)
            {
                <div class="modern-card">
                    <h5 class="mb-4 text-primary-modern fw-bold">Current User</h5>
                    <div class="table-responsive">
                        <table class="table">
                            <tbody>
                                <tr style="border-bottom: 1px solid var(--border-color);">
                                    <th class="text-primary-modern" style="width: 200px;">Email</th>
                                    <td class="text-secondary-modern">@currentUserInfo.Email</td>
                                </tr>
                                <tr style="border-bottom: 1px solid var(--border-color);">
                                    <th class="text-primary-modern">User ID</th>
                                    <td><small class="text-muted-modern">@currentUserInfo.Id</small></td>
                                </tr>
                                <tr style="border-bottom: 1px solid var(--border-color);">
                                    <th class="text-primary-modern">Created At</th>
                                    <td class="text-secondary-modern">@(currentUserInfo.CreatedAt?.ToString("g") ?? "N/A")</td>
                                </tr>
                                <tr style="border-bottom: 1px solid var(--border-color);">
                                    <th class="text-primary-modern">Last Sign In</th>
                                    <td class="text-secondary-modern">@(currentUserInfo.LastSignInAt?.ToString("g") ?? "Never")</td>
                                </tr>
                                <tr>
                                    <th class="text-primary-modern">Email Confirmed</th>
                                    <td>
                                        @if (currentUserInfo.EmailConfirmedAt.HasValue)
                                        {
                                            <span class="badge" style="background: #10b981; color: #fff;">Confirmed</span>
                                        }
                                        else
                                        {
                                            <span class="badge" style="background: var(--warning-color); color: #ffffff;">Pending</span>
                                        }
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="mt-4 pt-3" style="border-top: 1px solid var(--border-color);">
                        <a href="https://supabase.com/dashboard/project/wdzfgezvxydmmcyybnet/auth/users" 
                           target="_blank" 
                           class="btn-modern">
                            <i class="bi bi-box-arrow-up-right"></i> View All Users in Supabase Dashboard
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private UserInfo? currentUserInfo;
    private bool isLoading = true;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            var currentUser = SupabaseService.GetCurrentUser();
            if (currentUser != null)
            {
                currentUserInfo = new UserInfo
                {
                    Email = currentUser.Email ?? "N/A",
                    Id = currentUser.Id ?? string.Empty,
                    CreatedAt = currentUser.CreatedAt,
                    LastSignInAt = currentUser.LastSignInAt,
                    EmailConfirmedAt = currentUser.EmailConfirmedAt
                };
            }
            else
            {
                errorMessage = "Could not retrieve current user details.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading user data: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private class UserInfo
    {
        public string Email { get; set; } = string.Empty;
        public string Id { get; set; } = string.Empty;
        public DateTimeOffset? CreatedAt { get; set; }
        public DateTimeOffset? LastSignInAt { get; set; }
        public DateTimeOffset? EmailConfirmedAt { get; set; }
    }
}
