@page "/users"
@attribute [Authorize]
@using Supabase.Gotrue
@inject SupabaseService SupabaseService
@inject SupabaseAuthStateProvider AuthStateProvider

<PageTitle>User Information</PageTitle>

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">User Information</h2>
            
            @if (isLoading)
            {
                <div class="text-center">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-2">Loading user information...</p>
                </div>
            }
            else if (errorMessage != null)
            {
                <div class="alert alert-danger">@errorMessage</div>
            }
            else if (currentUserInfo != null)
            {
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Current User</h5>
                        <table class="table">
                            <tbody>
                                <tr>
                                    <th>Email</th>
                                    <td>@currentUserInfo.Email</td>
                                </tr>
                                <tr>
                                    <th>User ID</th>
                                    <td><small class="text-muted">@currentUserInfo.Id</small></td>
                                </tr>
                                <tr>
                                    <th>Created At</th>
                                    <td>@(currentUserInfo.CreatedAt?.ToString("g") ?? "N/A")</td>
                                </tr>
                                <tr>
                                    <th>Last Sign In</th>
                                    <td>@(currentUserInfo.LastSignInAt?.ToString("g") ?? "Never")</td>
                                </tr>
                                <tr>
                                    <th>Email Confirmed</th>
                                    <td>
                                        @if (currentUserInfo.EmailConfirmedAt.HasValue)
                                        {
                                            <span class="badge bg-success">Confirmed</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">Pending</span>
                                        }
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="mt-3">
                            <a href="https://supabase.com/dashboard/project/wdzfgezvxydmmcyybnet/auth/users" 
                               target="_blank" 
                               class="btn btn-primary btn-sm">
                                View All Users in Supabase Dashboard
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private UserInfo? currentUserInfo;
    private bool isLoading = true;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            var currentUser = SupabaseService.GetCurrentUser();
            if (currentUser != null)
            {
                currentUserInfo = new UserInfo
                {
                    Email = currentUser.Email ?? "N/A",
                    Id = currentUser.Id ?? string.Empty,
                    CreatedAt = currentUser.CreatedAt,
                    LastSignInAt = currentUser.LastSignInAt,
                    EmailConfirmedAt = currentUser.EmailConfirmedAt
                };
            }
            else
            {
                errorMessage = "Could not retrieve current user details.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading user data: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private class UserInfo
    {
        public string Email { get; set; } = string.Empty;
        public string Id { get; set; } = string.Empty;
        public DateTimeOffset? CreatedAt { get; set; }
        public DateTimeOffset? LastSignInAt { get; set; }
        public DateTimeOffset? EmailConfirmedAt { get; set; }
    }
}

