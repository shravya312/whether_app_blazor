@page "/profile"
@attribute [Authorize]
@using Supabase.Gotrue
@inject SupabaseService SupabaseService
@inject SupabaseAuthStateProvider AuthStateProvider
@inject NavigationManager Navigation

<PageTitle>Profile - Weather App</PageTitle>

<div class="page-container">
    <div class="d-flex align-items-center justify-content-center mb-4">
        <i class="bi bi-person-circle me-3" style="font-size: 2rem; color: var(--accent-primary);"></i>
        <div class="text-center">
            <h2 class="mb-0 fw-bold text-primary-modern">User Information</h2>
            <p class="text-secondary-modern mb-0">View your account details</p>
        </div>
    </div>
            
            @if (isLoading)
            {
                <div class="text-center py-5">
                    <div class="loading-spinner mx-auto mb-3"></div>
                    <p class="text-secondary-modern mt-2">Loading profile...</p>
                </div>
            }
            else if (currentUser != null)
            {
                <div class="modern-card mx-auto section-container" style="max-width: 800px;">
                    <h5 class="mb-4 text-primary-modern fw-bold text-center">Current User</h5>
                    
                    <div class="profile-info-grid">
                        <div class="info-box">
                            <label class="form-label text-primary-modern fw-bold text-center d-block">Email</label>
                            <input type="email" class="form-control-modern text-center" value="@currentUser.Email" readonly />
                        </div>

                        <div class="info-box">
                            <label class="form-label text-primary-modern fw-bold text-center d-block">User ID</label>
                            <input type="text" class="form-control-modern text-center" value="@currentUser.Id" readonly />
                            <small class="text-muted-modern text-center d-block">This is your unique identifier</small>
                        </div>

                        <div class="info-box">
                            <label class="form-label text-primary-modern fw-bold text-center d-block">Account Created</label>
                            <input type="text" class="form-control-modern text-center" value="@(currentUser.CreatedAt.ToString("g"))" readonly />
                        </div>

                        <div class="info-box">
                            <label class="form-label text-primary-modern fw-bold text-center d-block">Last Sign In</label>
                            <input type="text" class="form-control-modern text-center" value="@(currentUser.LastSignInAt?.ToString("g") ?? "Never")" readonly />
                        </div>

                        <div class="info-box">
                            <label class="form-label text-primary-modern fw-bold text-center d-block">Email Confirmed</label>
                            <div class="d-flex align-items-center justify-content-center gap-2 flex-wrap">
                                @if (currentUser.EmailConfirmedAt.HasValue)
                                {
                                    <span class="badge" style="background: #10b981; color: #fff;">Confirmed</span>
                                    <small class="text-muted-modern">@currentUser.EmailConfirmedAt.Value.ToString("g")</small>
                                }
                                else
                                {
                                    <span class="badge" style="background: var(--warning-color); color: #ffffff;">Pending</span>
                                    <small class="text-muted-modern">Please check your email to confirm your account</small>
                                }
                            </div>
                        </div>
                    </div>

                    @if (currentUser.UserMetadata != null && currentUser.UserMetadata.Any())
                    {
                        <div class="mb-4">
                            <label class="form-label text-primary-modern fw-bold text-center d-block">Additional Information</label>
                            <div class="modern-card" style="background: rgba(255, 255, 255, 0.03);">
                                <pre class="mb-0 text-secondary-modern" style="white-space: pre-wrap; word-wrap: break-word; text-align: left; font-family: 'Courier New', monospace; padding: 1rem; overflow-x: auto;">@System.Text.Json.JsonSerializer.Serialize(currentUser.UserMetadata, new System.Text.Json.JsonSerializerOptions { WriteIndented = true })</pre>
                            </div>
                        </div>
                    }

                    <div class="d-flex gap-2 justify-content-center mt-4 pt-4" style="border-top: 1px solid var(--border-color);">
                        <button class="btn-modern" @onclick="RefreshProfile">
                            <i class="bi bi-arrow-clockwise"></i> Refresh
                        </button>
                        <button class="btn-modern-outline" style="border-color: #ef4444; color: #ef4444;" @onclick="SignOut">
                            <i class="bi bi-box-arrow-right"></i> Sign Out
                        </button>
                    </div>
                </div>
            }
            else
            {
                <div class="modern-card mx-auto section-container text-center">
                    <div class="alert alert-warning">
                        <p class="text-primary-modern mb-3">Unable to load profile information. Please try again.</p>
                        <button class="btn-modern" @onclick="RefreshProfile">Retry</button>
                    </div>
                </div>
            }
</div>

<style>
    .profile-info-grid {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        margin-bottom: 2rem;
        align-items: center;
    }
    
    .info-box {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        width: 100%;
        max-width: 600px;
        align-items: center;
    }
    
    .info-box .form-label {
        margin-bottom: 0.25rem;
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        text-align: center;
        width: 100%;
    }
    
    .info-box .form-control-modern {
        width: 100%;
        min-height: 42px;
        text-align: center;
    }
    
    .info-box small {
        font-size: 0.75rem;
        margin-top: 0.25rem;
        text-align: center;
        width: 100%;
    }
    
    @@media (max-width: 768px) {
        .profile-info-grid {
            gap: 1rem;
        }
        
        .info-box {
            max-width: 100%;
        }
    }
</style>

@code {
    private User? currentUser;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadProfileAsync();
    }

    private async Task LoadProfileAsync()
    {
        isLoading = true;
        try
        {
            currentUser = await SupabaseService.GetUserAsync();
            if (currentUser == null)
            {
                currentUser = SupabaseService.GetCurrentUser();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading profile: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task RefreshProfile()
    {
        await LoadProfileAsync();
    }

    private async Task SignOut()
    {
        try
        {
            await SupabaseService.SignOutAsync();
            AuthStateProvider.ResetUser();
            Navigation.NavigateTo("/auth", true);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error signing out: {ex.Message}");
        }
    }
}
