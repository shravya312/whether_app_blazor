@page "/profile"
@attribute [Authorize]
@using Supabase.Gotrue
@inject SupabaseService SupabaseService
@inject SupabaseAuthStateProvider AuthStateProvider
@inject NavigationManager Navigation

<PageTitle>Profile - Weather App</PageTitle>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="mb-4">Profile Management</h2>
            
            @if (isLoading)
            {
                <div class="text-center">
                    <div class="spinner-border"></div>
                    <p class="mt-2">Loading profile...</p>
                </div>
            }
            else if (currentUser != null)
            {
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title mb-4">User Information</h5>
                        
                        <div class="mb-3">
                            <label class="form-label fw-bold">Email</label>
                            <input type="email" class="form-control" value="@currentUser.Email" readonly />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">User ID</label>
                            <input type="text" class="form-control" value="@currentUser.Id" readonly />
                            <small class="text-muted">This is your unique identifier</small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Account Created</label>
                            <input type="text" class="form-control" value="@(currentUser.CreatedAt.ToString("g"))" readonly />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Last Sign In</label>
                            <input type="text" class="form-control" value="@(currentUser.LastSignInAt?.ToString("g") ?? "Never")" readonly />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Email Confirmed</label>
                            <div>
                                @if (currentUser.EmailConfirmedAt.HasValue)
                                {
                                    <span class="badge bg-success">Confirmed</span>
                                    <small class="text-muted ms-2">@currentUser.EmailConfirmedAt.Value.ToString("g")</small>
                                }
                                else
                                {
                                    <span class="badge bg-warning">Pending</span>
                                    <small class="text-muted ms-2">Please check your email to confirm your account</small>
                                }
                            </div>
                        </div>

                        @if (currentUser.UserMetadata != null && currentUser.UserMetadata.Any())
                        {
                            <div class="mb-3">
                                <label class="form-label fw-bold">Additional Information</label>
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <pre class="mb-0">@System.Text.Json.JsonSerializer.Serialize(currentUser.UserMetadata, new System.Text.Json.JsonSerializerOptions { WriteIndented = true })</pre>
                                    </div>
                                </div>
                            </div>
                        }

                        <div class="d-flex gap-2 mt-4">
                            <button class="btn btn-primary" @onclick="RefreshProfile">
                                <i class="bi bi-arrow-clockwise"></i> Refresh
                            </button>
                            <button class="btn btn-outline-danger" @onclick="SignOut">
                                <i class="bi bi-box-arrow-right"></i> Sign Out
                            </button>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-warning">
                    <p>Unable to load profile information. Please try again.</p>
                    <button class="btn btn-primary" @onclick="RefreshProfile">Retry</button>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private User? currentUser;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadProfileAsync();
    }

    private async Task LoadProfileAsync()
    {
        isLoading = true;
        try
        {
            currentUser = await SupabaseService.GetUserAsync();
            if (currentUser == null)
            {
                currentUser = SupabaseService.GetCurrentUser();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading profile: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task RefreshProfile()
    {
        await LoadProfileAsync();
    }

    private async Task SignOut()
    {
        try
        {
            await SupabaseService.SignOutAsync();
            AuthStateProvider.ResetUser();
            Navigation.NavigateTo("/auth", true);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error signing out: {ex.Message}");
        }
    }
}

