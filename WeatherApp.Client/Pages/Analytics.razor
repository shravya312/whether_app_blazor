@page "/analytics"
@attribute [Authorize]
@using WeatherApp.Client.Models
@inject WeatherApiService WeatherApiService
@inject FavoriteCitiesService FavoriteCitiesService
@inject SupabaseService SupabaseService

<PageTitle>Weather Analytics - Weather App</PageTitle>

<div class="page-container">
    <div class="d-flex align-items-center justify-content-center mb-4">
        <i class="bi bi-graph-up me-3" style="font-size: 2rem; color: var(--accent-primary);"></i>
        <div class="text-center">
            <h2 class="mb-0 fw-bold text-primary-modern">Weather Analytics</h2>
            <p class="text-secondary-modern mb-0">Compare cities and analyze weather trends</p>
        </div>
    </div>
    
    <div class="row mb-4 justify-content-center">
        <div class="col-md-6">
            <div class="modern-card mx-auto section-container">
                <h5 class="mb-4 text-primary-modern fw-bold text-center">Compare Cities</h5>
                    <div class="mb-3">
                        <label class="form-label text-primary-modern text-center d-block">City 1</label>
                        <div class="d-flex justify-content-center">
                            <input @bind="city1" class="form-control-modern" placeholder="Enter city name" style="max-width: 400px; width: 100%;" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-primary-modern text-center d-block">City 2</label>
                        <div class="d-flex justify-content-center">
                            <input @bind="city2" class="form-control-modern" placeholder="Enter city name" style="max-width: 400px; width: 100%;" />
                        </div>
                    </div>
                    <div class="text-center">
                        <button class="btn-modern" @onclick="CompareCities" disabled="@isComparing">
                            @if (isComparing)
                            {
                                <span class="spinner-border spinner-border-sm me-2"></span>
                            }
                            Compare
                        </button>
                    </div>
                </div>
            </div>
        </div>

    @if (comparisonData.Any())
    {
        <div class="modern-card mb-4 mx-auto section-container">
            <h5 class="mb-4 text-primary-modern fw-bold text-center">City Comparison</h5>
            <div class="table-responsive">
                <table class="table text-center" style="color: var(--text-primary);">
                        <thead>
                            <tr style="border-bottom: 1px solid var(--border-color);">
                                <th style="color: var(--text-primary);">Metric</th>
                                @foreach (var city in comparisonData.Keys)
                                {
                                    <th style="color: var(--text-primary);">@city</th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><strong>Temperature</strong></td>
                                @foreach (var data in comparisonData.Values)
                                {
                                    <td>@data.Temperature.ToString("F1")°C</td>
                                }
                            </tr>
                            <tr>
                                <td><strong>Feels Like</strong></td>
                                @foreach (var data in comparisonData.Values)
                                {
                                    <td>@data.FeelsLike.ToString("F1")°C</td>
                                }
                            </tr>
                            <tr>
                                <td><strong>Humidity</strong></td>
                                @foreach (var data in comparisonData.Values)
                                {
                                    <td>@data.Humidity.ToString("F0")%</td>
                                }
                            </tr>
                            <tr>
                                <td><strong>Wind Speed</strong></td>
                                @foreach (var data in comparisonData.Values)
                                {
                                    <td>@data.WindSpeed.ToString("F1") m/s</td>
                                }
                            </tr>
                            <tr>
                                <td><strong>Pressure</strong></td>
                                @foreach (var data in comparisonData.Values)
                                {
                                    <td>@data.Pressure.ToString("F0") hPa</td>
                                }
                            </tr>
                            <tr>
                                <td><strong>Condition</strong></td>
                                @foreach (var data in comparisonData.Values)
                                {
                                    <td>@data.Description</td>
                                }
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
    }

    @if (forecastDataDict.Any())
    {
        @foreach (var forecastEntry in forecastDataDict)
        {
            var cityKey = forecastEntry.Key;
            var forecastData = forecastEntry.Value;
            
            <div class="modern-card mb-4 mx-auto section-container">
                <h5 class="mb-4 text-primary-modern fw-bold text-center">Temperature Trends - @cityKey</h5>
                    <div class="vertical-bar-chart">
                        @{
                            // Get all days data first to calculate overall range
                            var allDaysData = forecastData.Items.Take(40).GroupBy(f => f.DateTime.Date).Take(5)
                                .Select(g => {
                                    var items = g.OrderBy(f => f.DateTime).ToList();
                                    var avg = items.Average(f => f.Temperature);
                                    var min = items.Min(f => f.MinTemperature);
                                    var max = items.Max(f => f.MaxTemperature);
                                    return new { Min = min, Avg = avg, Max = max };
                                }).ToList();
                            
                            var dataMin = allDaysData.Min(d => d.Min);
                            var dataMax = allDaysData.Max(d => d.Max);
                            
                            // Always start from 0°C at origin
                            var stepValue = 6.0; // Use 6°C intervals for clean labels
                            
                            // Start from 0
                            var overallMin = 0;
                            
                            // Calculate max aligned to stepValue and add padding
                            var overallMax = Math.Ceiling(dataMax / stepValue) * stepValue;
                            overallMax = overallMax + stepValue; // Add one step of padding at top
                            
                            var overallRange = overallMax - overallMin;
                            
                            // Calculate number of steps for Y-axis
                            var yAxisSteps = (int)Math.Round(overallRange / stepValue);
                        }
                        
                        <div class="chart-container">
                            <div class="y-axis">
                                @for (int i = yAxisSteps; i >= 0; i--)
                                {
                                    var value = overallMin + (stepValue * i);
                                    // Calculate position from bottom (0% = bottom, 100% = top)
                                    // Since overallMin = 0, this simplifies to: (value / overallRange) * 100
                                    var labelPosition = (value / overallRange) * 100;
                                    // Position labels below the grid line (top of label aligns with grid line)
                                    <div class="y-axis-label" style="position: absolute; bottom: @labelPosition.ToString("F2")%; transform: translateY(100%);">@value.ToString("F0")°C</div>
                                }
                            </div>
                            
                            <div class="chart-area">
                                <!-- Y-axis line -->
                                <div class="y-axis-line"></div>
                                <!-- X-axis line (baseline at 0°C) -->
                                <div class="x-axis-line"></div>
                                <!-- Grid lines for Y-axis -->
                                @for (int i = 0; i <= yAxisSteps; i++)
                                {
                                    var value = overallMin + (stepValue * i);
                                    var gridPosition = (value / overallRange) * 100;
                                    <div class="grid-line" style="bottom: @gridPosition.ToString("F2")%;"></div>
                                }
                                <div class="bars-container">
                                    @foreach (var item in forecastData.Items.Take(40).GroupBy(f => f.DateTime.Date).Take(5))
                                    {
                                        var dayItems = item.OrderBy(f => f.DateTime).ToList();
                                        var avgTemp = dayItems.Average(f => f.Temperature);
                                        var minTemp = dayItems.Min(f => f.MinTemperature);
                                        var maxTemp = dayItems.Max(f => f.MaxTemperature);
                                        var dayName = dayItems.First().DateTime.ToString("ddd");
                                        var dayDate = dayItems.First().DateTime.ToString("MMM dd");
                                        
                                        // Calculate bar heights as percentages of the chart height
                                        // Since overallMin = 0, this simplifies to: (temp / overallRange) * 100
                                        var minHeight = (minTemp / overallRange) * 100;
                                        var avgHeight = (avgTemp / overallRange) * 100;
                                        var maxHeight = (maxTemp / overallRange) * 100;
                                        
                                        // Ensure heights are within valid range
                                        minHeight = Math.Max(0, Math.Min(100, minHeight));
                                        avgHeight = Math.Max(0, Math.Min(100, avgHeight));
                                        maxHeight = Math.Max(0, Math.Min(100, maxHeight));
                                        
                                        <div class="bar-group">
                                            <div class="bar-wrapper">
                                                <div class="vertical-bar bar-min" 
                                                     style="height: @minHeight.ToString("F2")%; min-height: 2px;"
                                                     title="Min: @minTemp.ToString("F1")°C">
                                                    <span class="bar-value">@minTemp.ToString("F1")</span>
                                                </div>
                                                <div class="vertical-bar bar-avg" 
                                                     style="height: @avgHeight.ToString("F2")%; min-height: 2px;"
                                                     title="Avg: @avgTemp.ToString("F1")°C">
                                                    <span class="bar-value">@avgTemp.ToString("F1")</span>
                                                </div>
                                                <div class="vertical-bar bar-max" 
                                                     style="height: @maxHeight.ToString("F2")%; min-height: 2px;"
                                                     title="Max: @maxTemp.ToString("F1")°C">
                                                    <span class="bar-value">@maxTemp.ToString("F1")</span>
                                                </div>
                                            </div>
                                            <div class="x-axis-label">
                                                <div class="day-name">@dayName</div>
                                                <div class="day-date">@dayDate</div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        }

        <div class="row justify-content-center">
            @foreach (var forecastEntry in forecastDataDict)
            {
                var cityKey = forecastEntry.Key;
                var forecastData = forecastEntry.Value;
                
                <div class="col-md-6 mb-3">
                    <div class="modern-card">
                        <h5 class="mb-4 text-primary-modern fw-bold text-center">Humidity Patterns - @cityKey</h5>
                            <div class="humidity-stats text-center">
                                @{
                                    var avgHumidity = forecastData.Items.Average(f => f.Humidity);
                                    var maxHumidity = forecastData.Items.Max(f => f.Humidity);
                                    var minHumidity = forecastData.Items.Min(f => f.Humidity);
                                }
                                <p><strong>Average:</strong> @avgHumidity.ToString("F1")%</p>
                                <p><strong>Maximum:</strong> @maxHumidity.ToString("F1")%</p>
                                <p><strong>Minimum:</strong> @minHumidity.ToString("F1")%</p>
                            </div>
                        </div>
                    </div>
            }
        </div>

        <div class="row justify-content-center">
            @foreach (var forecastEntry in forecastDataDict)
            {
                var cityKey = forecastEntry.Key;
                var forecastData = forecastEntry.Value;
                
                <div class="col-md-6 mb-3">
                    <div class="modern-card">
                        <h5 class="mb-4 text-primary-modern fw-bold text-center">Precipitation Analysis - @cityKey</h5>
                            <div class="precipitation-stats text-center">
                                @{
                                    var totalPrecipitation = forecastData.Items
                                        .Where(f => f.Precipitation.HasValue)
                                        .Sum(f => f.Precipitation!.Value);
                                    var rainyDays = forecastData.Items
                                        .GroupBy(f => f.DateTime.Date)
                                        .Count(g => g.Any(f => f.Precipitation.HasValue && f.Precipitation.Value > 0));
                                }
                                <p><strong>Total Precipitation:</strong> @totalPrecipitation.ToString("F2") mm</p>
                                <p><strong>Rainy Days:</strong> @rainyDays out of @forecastData.Items.GroupBy(f => f.DateTime.Date).Count()</p>
                            </div>
                        </div>
                    </div>
            }
        </div>
    }
</div>

