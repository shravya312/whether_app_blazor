@page "/global-cities"
@using WeatherApp.Client.Models
@inject WeatherApiService WeatherApiService
@inject PopularCitiesApiService PopularCitiesApiService
@inject ThemeService ThemeService

<PageTitle>Top Global Cities - Weather App</PageTitle>

<div class="page-container">
    <div class="d-flex align-items-center justify-content-center mb-4">
        <i class="bi bi-globe me-3" style="font-size: 2rem; color: var(--accent-primary);"></i>
        <div class="text-center">
            <h2 class="mb-0 fw-bold text-primary-modern">Top 5 Global Cities Dashboard</h2>
            <p class="text-secondary-modern mb-0">Weather information for the most popular cities worldwide</p>
        </div>
    </div>
    
    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="loading-spinner mx-auto mb-3"></div>
            <p class="text-secondary-modern mt-2">Loading global cities weather...</p>
        </div>
    }
    else if (globalCitiesWeather.Any())
    {
        <div class="widget-grid mx-auto section-container">
            @foreach (var cityWeather in globalCitiesWeather.OrderByDescending(c => c.Value.Timestamp))
            {
                var weather = cityWeather.Value;
                var cityKey = cityWeather.Key;
                
                <div class="weather-widget fade-in">
                    <div class="text-center mb-3">
                        <h5 class="mb-1 text-primary-modern fw-bold">@weather.City</h5>
                        <small class="text-secondary-modern">@weather.Country</small>
                        @if (!string.IsNullOrEmpty(weather.Icon))
                        {
                            <div class="mt-2">
                                <img src="@($"https://openweathermap.org/img/wn/{weather.Icon}@2x.png")" 
                                     alt="@weather.Description" 
                                     style="width: 60px; height: 60px;" />
                            </div>
                        }
                    </div>
                    
                    <div class="text-center mb-3">
                        <div class="current-temp" style="font-size: 2.5rem; margin: 0.5rem 0;">@weather.Temperature.ToString("F0")°</div>
                        <div class="current-condition">@weather.Description</div>
                        <small class="text-secondary-modern">Feels like @weather.FeelsLike.ToString("F1")°C</small>
                    </div>
                    
                    <div class="weather-stats-grid">
                        <div class="weather-stat">
                            <div class="stat-icon">
                                <i class="bi bi-droplet-fill"></i>
                            </div>
                            <div class="stat-value">@weather.Humidity.ToString("F0")%</div>
                            <div class="stat-label">Humidity</div>
                        </div>
                        <div class="weather-stat">
                            <div class="stat-icon">
                                <i class="bi bi-wind"></i>
                            </div>
                            <div class="stat-value">@weather.WindSpeed.ToString("F1")</div>
                            <div class="stat-label">Wind m/s</div>
                        </div>
                        <div class="weather-stat">
                            <div class="stat-icon">
                                <i class="bi bi-speedometer2"></i>
                            </div>
                            <div class="stat-value">@weather.Pressure.ToString("F0")</div>
                            <div class="stat-label">hPa</div>
                        </div>
                    </div>
                    
                    <div class="mt-3 pt-3 text-center" style="border-top: 1px solid var(--border-color);">
                        <small class="text-muted-modern">
                            <i class="bi bi-clock"></i>
                            Updated @weather.Timestamp.ToLocalTime().ToString("g")
                        </small>
                    </div>
                    
                    <div class="mt-3">
                        <button class="btn-modern w-100" @onclick="() => ViewCityDetails(weather.City, weather.Country)">
                            <i class="bi bi-eye"></i> View Details
                        </button>
                    </div>
                </div>
            }
        </div>
        
        <div class="row mt-4 justify-content-center">
            <div class="col-12">
                <div class="card mx-auto section-container">
                    <div class="card-body">
                        <h5 class="card-title text-center">Quick Comparison</h5>
                        <div class="table-responsive">
                            <table class="table table-striped text-center">
                                <thead>
                                    <tr>
                                        <th>City</th>
                                        <th>Temperature</th>
                                        <th>Humidity</th>
                                        <th>Wind Speed</th>
                                        <th>Condition</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var cityWeather in globalCitiesWeather.OrderByDescending(c => c.Value.Timestamp))
                                    {
                                        var weather = cityWeather.Value;
                                        <tr>
                                            <td><strong>@weather.City, @weather.Country</strong></td>
                                            <td>@weather.Temperature.ToString("F1")°C</td>
                                            <td>@weather.Humidity.ToString("F0")%</td>
                                            <td>@weather.WindSpeed.ToString("F1") m/s</td>
                                            <td>@weather.Description</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="alert alert-danger text-center mx-auto section-container">
            @errorMessage
        </div>
    }
    else
    {
        <div class="alert alert-info text-center mx-auto section-container">
            <h5>No global cities data available</h5>
            <p>Popular cities will appear here once users start searching for weather information.</p>
        </div>
    }
</div>

<style>
    .weather-city-card {
        transition: transform 0.2s, box-shadow 0.2s;
        border: 1px solid #dee2e6;
    }

    .weather-city-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    .weather-main-info {
        text-align: center;
        padding: 15px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 10px;
        color: white;
    }

    .weather-main-info .display-4 {
        font-weight: bold;
        color: white;
    }

    .weather-main-info .text-muted {
        color: rgba(255,255,255,0.9) !important;
    }

    .detail-box {
        display: flex;
        align-items: center;
        gap: 8px;
        padding: 8px;
        background: #f8f9fa;
        border-radius: 5px;
    }

    .detail-box i {
        font-size: 1.5rem;
    }

    [data-theme="dark"] .weather-city-card {
        background: #2d3748;
        border-color: #4a5568;
        color: #e2e8f0;
    }

    [data-theme="dark"] .detail-box {
        background: rgba(255,255,255,0.1);
    }
</style>

@code {
    private Dictionary<string, WeatherData> globalCitiesWeather = new();
    private bool isLoading = true;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await ThemeService.InitializeThemeAsync();
        await LoadGlobalCitiesWeather();
    }

    private async Task LoadGlobalCitiesWeather()
    {
        isLoading = true;
        errorMessage = null;
        globalCitiesWeather.Clear();

        try
        {
            // Get top 5 popular cities
            var popularCities = await PopularCitiesApiService.GetPopularCitiesAsync(5);
            
            if (popularCities != null && popularCities.Any())
            {
                // Load weather for each popular city
                foreach (var city in popularCities)
                {
                    try
                    {
                        var weather = await WeatherApiService.GetWeatherAsync(city);
                        if (weather != null)
                        {
                            var cityKey = $"{weather.City}, {weather.Country}";
                            globalCitiesWeather[cityKey] = weather;
                        }
                    }
                    catch (Exception ex)
                    {
                        Console.WriteLine($"Error loading weather for {city}: {ex.Message}");
                    }
                }
            }
            else
            {
                // Fallback to default global cities if no popular cities found
                var defaultCities = new List<string> { "New York", "London", "Tokyo", "Bangalore", "Sydney" };
                foreach (var city in defaultCities)
                {
                    try
                    {
                        var weather = await WeatherApiService.GetWeatherAsync(city);
                        if (weather != null)
                        {
                            var cityKey = $"{weather.City}, {weather.Country}";
                            globalCitiesWeather[cityKey] = weather;
                        }
                    }
                    catch (Exception ex)
                    {
                        Console.WriteLine($"Error loading weather for {city}: {ex.Message}");
                    }
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading global cities: {ex.Message}";
            Console.WriteLine($"Error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ViewCityDetails(string city, string country)
    {
        // Navigate to home page with city search
        Navigation.NavigateTo($"/?city={Uri.EscapeDataString(city)}&country={Uri.EscapeDataString(country)}");
    }

    [Inject]
    private NavigationManager Navigation { get; set; } = default!;
}

