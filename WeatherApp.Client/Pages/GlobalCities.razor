@page "/global-cities"
@using WeatherApp.Client.Models
@inject WeatherApiService WeatherApiService
@inject PopularCitiesApiService PopularCitiesApiService
@inject ThemeService ThemeService

<PageTitle>Top Global Cities - Weather App</PageTitle>

<div class="container mt-4">
    <h2 class="mb-4">Top 5 Global Cities Dashboard</h2>
    <p class="text-muted mb-4">Weather information for the most popular cities worldwide</p>
    
    @if (isLoading)
    {
        <div class="text-center">
            <div class="spinner-border"></div>
            <p class="mt-2">Loading global cities weather...</p>
        </div>
    }
    else if (globalCitiesWeather.Any())
    {
        <div class="row">
            @foreach (var cityWeather in globalCitiesWeather.OrderByDescending(c => c.Value.Timestamp))
            {
                var weather = cityWeather.Value;
                var cityKey = cityWeather.Key;
                
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 weather-city-card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <h5 class="card-title mb-0">@weather.City, @weather.Country</h5>
                                @if (!string.IsNullOrEmpty(weather.Icon))
                                {
                                    <img src="@($"https://openweathermap.org/img/wn/{weather.Icon}@2x.png")" 
                                         alt="@weather.Description" 
                                         style="width: 60px; height: 60px;" />
                                }
                            </div>
                            
                            <div class="weather-main-info mb-3">
                                <div class="display-4 mb-2">@weather.Temperature.ToString("F1")°C</div>
                                <div class="text-muted mb-2">@weather.Description</div>
                                <div class="small text-muted">Feels like @weather.FeelsLike.ToString("F1")°C</div>
                            </div>
                            
                            <div class="weather-details">
                                <div class="row g-2">
                                    <div class="col-6">
                                        <div class="detail-box">
                                            <i class="bi bi-droplet text-primary"></i>
                                            <div>
                                                <small class="text-muted">Humidity</small>
                                                <div class="fw-bold">@weather.Humidity.ToString("F0")%</div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="detail-box">
                                            <i class="bi bi-wind text-info"></i>
                                            <div>
                                                <small class="text-muted">Wind</small>
                                                <div class="fw-bold">@weather.WindSpeed.ToString("F1") m/s</div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="detail-box">
                                            <i class="bi bi-speedometer text-warning"></i>
                                            <div>
                                                <small class="text-muted">Pressure</small>
                                                <div class="fw-bold">@weather.Pressure.ToString("F0") hPa</div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="detail-box">
                                            <i class="bi bi-cloud text-secondary"></i>
                                            <div>
                                                <small class="text-muted">Clouds</small>
                                                <div class="fw-bold">@weather.Cloudiness.ToString("F0")%</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="mt-3">
                                <small class="text-muted">
                                    <i class="bi bi-clock"></i>
                                    Updated @weather.Timestamp.ToLocalTime().ToString("g")
                                </small>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <button class="btn btn-sm btn-primary w-100" @onclick="() => ViewCityDetails(weather.City, weather.Country)">
                                <i class="bi bi-eye"></i> View Details
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
        
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Quick Comparison</h5>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>City</th>
                                        <th>Temperature</th>
                                        <th>Humidity</th>
                                        <th>Wind Speed</th>
                                        <th>Condition</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var cityWeather in globalCitiesWeather.OrderByDescending(c => c.Value.Timestamp))
                                    {
                                        var weather = cityWeather.Value;
                                        <tr>
                                            <td><strong>@weather.City, @weather.Country</strong></td>
                                            <td>@weather.Temperature.ToString("F1")°C</td>
                                            <td>@weather.Humidity.ToString("F0")%</td>
                                            <td>@weather.WindSpeed.ToString("F1") m/s</td>
                                            <td>@weather.Description</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="alert alert-danger">
            @errorMessage
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <h5>No global cities data available</h5>
            <p>Popular cities will appear here once users start searching for weather information.</p>
        </div>
    }
</div>

<style>
    .weather-city-card {
        transition: transform 0.2s, box-shadow 0.2s;
        border: 1px solid #dee2e6;
    }

    .weather-city-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    .weather-main-info {
        text-align: center;
        padding: 15px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 10px;
        color: white;
    }

    .weather-main-info .display-4 {
        font-weight: bold;
        color: white;
    }

    .weather-main-info .text-muted {
        color: rgba(255,255,255,0.9) !important;
    }

    .detail-box {
        display: flex;
        align-items: center;
        gap: 8px;
        padding: 8px;
        background: #f8f9fa;
        border-radius: 5px;
    }

    .detail-box i {
        font-size: 1.5rem;
    }

    [data-theme="dark"] .weather-city-card {
        background: #2d3748;
        border-color: #4a5568;
        color: #e2e8f0;
    }

    [data-theme="dark"] .detail-box {
        background: rgba(255,255,255,0.1);
    }
</style>

@code {
    private Dictionary<string, WeatherData> globalCitiesWeather = new();
    private bool isLoading = true;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await ThemeService.InitializeThemeAsync();
        await LoadGlobalCitiesWeather();
    }

    private async Task LoadGlobalCitiesWeather()
    {
        isLoading = true;
        errorMessage = null;
        globalCitiesWeather.Clear();

        try
        {
            // Get top 5 popular cities
            var popularCities = await PopularCitiesApiService.GetPopularCitiesAsync(5);
            
            if (popularCities != null && popularCities.Any())
            {
                // Load weather for each popular city
                foreach (var city in popularCities)
                {
                    try
                    {
                        var weather = await WeatherApiService.GetWeatherAsync(city);
                        if (weather != null)
                        {
                            var cityKey = $"{weather.City}, {weather.Country}";
                            globalCitiesWeather[cityKey] = weather;
                        }
                    }
                    catch (Exception ex)
                    {
                        Console.WriteLine($"Error loading weather for {city}: {ex.Message}");
                    }
                }
            }
            else
            {
                // Fallback to default global cities if no popular cities found
                var defaultCities = new List<string> { "New York", "London", "Tokyo", "Bangalore", "Sydney" };
                foreach (var city in defaultCities)
                {
                    try
                    {
                        var weather = await WeatherApiService.GetWeatherAsync(city);
                        if (weather != null)
                        {
                            var cityKey = $"{weather.City}, {weather.Country}";
                            globalCitiesWeather[cityKey] = weather;
                        }
                    }
                    catch (Exception ex)
                    {
                        Console.WriteLine($"Error loading weather for {city}: {ex.Message}");
                    }
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading global cities: {ex.Message}";
            Console.WriteLine($"Error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ViewCityDetails(string city, string country)
    {
        // Navigate to home page with city search
        Navigation.NavigateTo($"/?city={Uri.EscapeDataString(city)}&country={Uri.EscapeDataString(country)}");
    }

    [Inject]
    private NavigationManager Navigation { get; set; } = default!;
}

