@page "/alerts/history"
@attribute [Authorize]
@using WeatherApp.Client.Models
@using WeatherApp.Client.Services
@inject AlertHistoryService AlertHistoryService
@inject SupabaseService SupabaseService
@using static WeatherApp.Client.Services.WeatherAlertsService

<PageTitle>Alert History - Weather App</PageTitle>

<div class="container-fluid px-4 py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center">
            <i class="bi bi-clock-history me-3" style="font-size: 2rem; color: var(--accent-primary);"></i>
            <div>
                <h2 class="mb-0 fw-bold text-primary-modern">Alert History</h2>
                <p class="text-secondary-modern mb-0">View all your weather alerts</p>
            </div>
        </div>
        <button class="btn-modern-outline" style="border-color: #ef4444; color: #ef4444;" @onclick="ClearHistory" disabled="@isClearing">
            @if (isClearing)
            {
                <span class="spinner-border spinner-border-sm me-2"></span>
            }
            <i class="bi bi-trash"></i> Clear History
        </button>
    </div>
    
    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="loading-spinner mx-auto mb-3"></div>
            <p class="text-secondary-modern mt-2">Loading alert history...</p>
        </div>
    }
    else if (!alertHistory.Any())
    {
        <div class="modern-card text-center py-5">
            <i class="bi bi-inbox mb-3" style="font-size: 3rem; color: var(--text-secondary);"></i>
            <h5 class="text-primary-modern fw-bold">No Alert History</h5>
            <p class="text-secondary-modern">You haven't received any weather alerts yet. Alerts will appear here when severe weather conditions are detected.</p>
        </div>
    }
    else
    {
        <div class="modern-card">
            <div class="mb-4">
                <label class="form-label text-primary-modern fw-bold">Filter by Severity:</label>
                <select class="form-control-modern" @bind="selectedSeverity" @bind:event="onchange" style="max-width: 200px;">
                    <option value="">All</option>
                    <option value="High">High</option>
                    <option value="Medium">Medium</option>
                    <option value="Low">Low</option>
                </select>
            </div>

            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr style="border-bottom: 2px solid var(--border-color);">
                            <th class="text-primary-modern">Date & Time</th>
                            <th class="text-primary-modern">City</th>
                            <th class="text-primary-modern">Type</th>
                            <th class="text-primary-modern">Severity</th>
                            <th class="text-primary-modern">Message</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var alert in filteredHistory)
                        {
                            <tr style="border-bottom: 1px solid var(--border-color);">
                                <td class="text-secondary-modern">@alert.Timestamp.ToLocalTime().ToString("g")</td>
                                <td class="text-primary-modern fw-bold">@alert.City, @alert.Country</td>
                                <td>
                                    <i class="bi @GetAlertIcon(alert.Type)" style="color: var(--accent-primary);"></i>
                                    <span class="text-secondary-modern ms-2">@alert.Type</span>
                                </td>
                                <td>
                                    <span class="badge @GetSeverityBadgeClass(alert.Severity)">
                                        @alert.Severity
                                    </span>
                                </td>
                                <td class="text-secondary-modern">@alert.Message</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="mt-4 pt-3" style="border-top: 1px solid var(--border-color);">
                <p class="text-muted-modern mb-0">
                    Showing <strong class="text-primary-modern">@filteredHistory.Count()</strong> of <strong class="text-primary-modern">@alertHistory.Count</strong> alerts
                </p>
            </div>
        </div>
    }
</div>

@code {
    private List<WeatherAlert> alertHistory = new();
    private string selectedSeverity = "";
    private bool isLoading = true;
    private bool isClearing = false;
    private string? currentUserId;

    private IEnumerable<WeatherAlert> filteredHistory =>
        string.IsNullOrEmpty(selectedSeverity)
            ? alertHistory
            : alertHistory.Where(a => a.Severity.ToString() == selectedSeverity);

    protected override async Task OnInitializedAsync()
    {
        var user = SupabaseService.GetCurrentUser();
        if (user != null)
        {
            currentUserId = user.Id;
            await LoadAlertHistory();
        }
        isLoading = false;
    }

    private async Task LoadAlertHistory()
    {
        if (string.IsNullOrEmpty(currentUserId)) return;
        
        alertHistory = await AlertHistoryService.GetAlertHistoryAsync(currentUserId);
    }

    private async Task ClearHistory()
    {
        if (string.IsNullOrEmpty(currentUserId)) return;

        isClearing = true;
        try
        {
            await AlertHistoryService.ClearAlertHistoryAsync(currentUserId);
            alertHistory.Clear();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error clearing history: {ex.Message}");
        }
        finally
        {
            isClearing = false;
        }
    }

    private string GetAlertIcon(AlertType type)
    {
        return type switch
        {
            AlertType.SevereHeat => "bi-thermometer-sun",
            AlertType.SevereCold => "bi-thermometer-snow",
            AlertType.HighWind => "bi-wind",
            AlertType.Thunderstorm => "bi-lightning-fill",
            AlertType.HeavyRain => "bi-cloud-rain-heavy",
            AlertType.HeavySnow => "bi-snow",
            AlertType.Fog => "bi-cloud-fog",
            AlertType.HighHumidity => "bi-droplet-fill",
            AlertType.LowHumidity => "bi-droplet",
            _ => "bi-exclamation-triangle"
        };
    }

    private string GetSeverityBadgeClass(AlertSeverity severity)
    {
        return severity switch
        {
            AlertSeverity.High => "bg-danger",
            AlertSeverity.Medium => "bg-warning text-dark",
            AlertSeverity.Low => "bg-info",
            _ => "bg-secondary"
        };
    }
}
