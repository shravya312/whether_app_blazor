@page "/alerts/settings"
@attribute [Authorize]
@using WeatherApp.Client.Models
@using WeatherApp.Client.Services
@inject AlertSettingsService AlertSettingsService
@inject SupabaseService SupabaseService
@inject FavoriteCitiesService FavoriteCitiesService
@inject PushNotificationService PushNotificationService
@inject IJSRuntime JSRuntime

<PageTitle>Alert Settings - Weather App</PageTitle>

<div class="container-fluid px-4 py-4">
    <div class="d-flex align-items-center mb-4">
        <i class="bi bi-bell me-3" style="font-size: 2rem; color: var(--accent-primary);"></i>
        <div>
            <h2 class="mb-0 fw-bold text-primary-modern">Alert Settings</h2>
            <p class="text-secondary-modern mb-0">Configure your weather alert preferences</p>
        </div>
    </div>
    
    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="loading-spinner mx-auto mb-3"></div>
            <p class="text-secondary-modern mt-2">Loading settings...</p>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-10">
                <div class="modern-card">
                    <h5 class="mb-4 text-primary-modern fw-bold">Custom Alert Thresholds</h5>
                        
                        <EditForm Model="@settings" OnValidSubmit="SaveSettings">
                            <DataAnnotationsValidator />
                            
                            <div class="row mb-4">
                                <div class="col-md-6">
                                    <label class="form-label text-primary-modern fw-bold">Maximum Temperature (°C)</label>
                                    <input type="number" class="form-control-modern" @bind="maxTemp" step="0.1" />
                                    <small class="text-muted-modern">Alert when temperature exceeds this value</small>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label text-primary-modern fw-bold">Minimum Temperature (°C)</label>
                                    <input type="number" class="form-control-modern" @bind="minTemp" step="0.1" />
                                    <small class="text-muted-modern">Alert when temperature drops below this value</small>
                                </div>
                            </div>

                            <div class="row mb-4">
                                <div class="col-md-6">
                                    <label class="form-label text-primary-modern fw-bold">Maximum Wind Speed (m/s)</label>
                                    <input type="number" class="form-control-modern" @bind="maxWind" step="0.1" />
                                    <small class="text-muted-modern">Alert when wind speed exceeds this value</small>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label text-primary-modern fw-bold">Maximum Humidity (%)</label>
                                    <input type="number" class="form-control-modern" @bind="maxHumidity" step="0.1" />
                                    <small class="text-muted-modern">Alert when humidity exceeds this value</small>
                                </div>
                            </div>

                            <div class="mb-4">
                                <label class="form-label text-primary-modern fw-bold">Minimum Humidity (%)</label>
                                <input type="number" class="form-control-modern" @bind="minHumidity" step="0.1" />
                                <small class="text-muted-modern">Alert when humidity drops below this value</small>
                            </div>

                            <hr style="border-color: var(--border-color); margin: 2rem 0;" />

                            <h6 class="mb-4 text-primary-modern fw-bold">Weather Condition Alerts</h6>
                            
                            <div class="mb-3">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" @bind="settings.EnableThunderstormAlerts" />
                                    <label class="form-check-label text-primary-modern">Enable Thunderstorm Alerts</label>
                                </div>
                            </div>

                            <div class="mb-3">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" @bind="settings.EnableHeavyRainAlerts" />
                                    <label class="form-check-label text-primary-modern">Enable Heavy Rain Alerts</label>
                                </div>
                            </div>

                            <div class="mb-3">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" @bind="settings.EnableHeavySnowAlerts" />
                                    <label class="form-check-label text-primary-modern">Enable Heavy Snow Alerts</label>
                                </div>
                            </div>

                            <hr style="border-color: var(--border-color); margin: 2rem 0;" />

                            <h6 class="mb-4 text-primary-modern fw-bold">Notification Preferences</h6>
                            
                            <div class="mb-4">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" checked="@settings.EnablePushNotifications" @onchange="OnPushNotificationToggle" disabled="@(isSubscribing || isUnsubscribing)" />
                                    <label class="form-check-label text-primary-modern">Enable Web Push Notifications (Background)</label>
                                </div>
                                <small class="text-muted-modern">Receive alerts even when app is closed</small>
                                @if (pushSubscriptionStatus != null)
                                {
                                    <div class="mt-2">
                                        @{
                                            var badgeClass = pushSubscriptionStatus == "subscribed" ? "bg-success" : pushSubscriptionStatus == "not-supported" ? "bg-secondary" : "bg-warning";
                                        }
                                        <span class="badge @badgeClass">
                                            @if (pushSubscriptionStatus == "subscribed")
                                            {
                                                <i class="bi bi-check-circle"></i> <text>Active</text>
                                            }
                                            else if (pushSubscriptionStatus == "not-supported")
                                            {
                                                <i class="bi bi-x-circle"></i> <text>Not Supported</text>
                                            }
                                            else if (isSubscribing)
                                            {
                                                <span class="spinner-border spinner-border-sm me-1"></span> <text>Setting up...</text>
                                            }
                                            else
                                            {
                                                <i class="bi bi-exclamation-triangle"></i> <text>Inactive</text>
                                            }
                                        </span>
                                    </div>
                                }
                                
                                <div class="d-flex gap-2 flex-wrap mt-3">
                                    <button type="button" class="btn-modern-outline" @onclick="RequestNotificationPermission">
                                        <i class="bi bi-bell"></i> Request Notification Permission
                                    </button>
                                    @if (settings.EnablePushNotifications && pushSubscriptionStatus != "subscribed" && pushSubscriptionStatus != "not-supported")
                                    {
                                        <button type="button" class="btn-modern-outline" @onclick="SubscribeToPush" disabled="@isSubscribing">
                                            @if (isSubscribing)
                                            {
                                                <span class="spinner-border spinner-border-sm me-2"></span>
                                            }
                                            <i class="bi bi-bell-fill"></i> Subscribe to Push
                                        </button>
                                    }
                                    @if (pushSubscriptionStatus == "subscribed")
                                    {
                                        <button type="button" class="btn-modern-outline" style="border-color: #ef4444; color: #ef4444;" @onclick="UnsubscribeFromPush" disabled="@isUnsubscribing">
                                            @if (isUnsubscribing)
                                            {
                                                <span class="spinner-border spinner-border-sm me-2"></span>
                                            }
                                            <i class="bi bi-bell-slash"></i> Unsubscribe
                                        </button>
                                    }
                                </div>
                            </div>

                            <div class="mb-4">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" @bind="settings.EnableEmailNotifications" />
                                    <label class="form-check-label text-primary-modern">Enable Email Notifications</label>
                                </div>
                                <small class="text-muted-modern">Email notifications require backend configuration</small>
                            </div>

                            <hr style="border-color: var(--border-color); margin: 2rem 0;" />

                            <h6 class="mb-4 text-primary-modern fw-bold">Monitored Cities</h6>
                            <div class="modern-card mb-4" style="background: rgba(59, 130, 246, 0.1); border-left: 4px solid #3b82f6;">
                                <p class="mb-2 text-primary-modern">
                                    <strong>✅ Email notifications work for ALL cities you search.</strong> The system automatically checks all cities for weather alerts and sends email notifications when alerts trigger.
                                </p>
                                <p class="mb-0 text-secondary-modern">
                                    <small>Below, you can select specific favorite cities to prioritize. <strong class="text-primary-modern">All new cities are checked by default</strong> - they will receive email alerts automatically.</small>
                                </p>
                            </div>
                            
                            @if (favoriteCities.Any())
                            {
                                <p class="text-secondary-modern mt-3 mb-3">Select specific favorite cities to monitor (all are checked by default):</p>
                                <div class="mb-4">
                                    @foreach (var city in favoriteCities)
                                    {
                                        var cityKey = $"{city.City}, {city.Country}";
                                        // Default to true (monitored/checked) - all cities checked by default
                                        // If MonitoredCities is empty, all are monitored. Otherwise check if city is in list.
                                        var isMonitored = settings.MonitoredCities == null || 
                                                         !settings.MonitoredCities.Any() || 
                                                         settings.MonitoredCities.Contains(cityKey);
                                        <div class="form-check mb-3">
                                            <input type="checkbox" class="form-check-input" 
                                                   checked="@isMonitored"
                                                   @onchange="@((ChangeEventArgs e) => ToggleMonitoredCity(cityKey, e.Value?.ToString() == "True"))" />
                                            <label class="form-check-label text-primary-modern">@cityKey</label>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <p class="text-secondary-modern">No favorite cities yet. All cities you search will be automatically monitored for alerts.</p>
                            }

                            <div class="d-flex gap-2 flex-wrap mt-4 pt-4" style="border-top: 1px solid var(--border-color);">
                                <button type="submit" class="btn-modern" disabled="@isSaving">
                                    @if (isSaving)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2"></span>
                                    }
                                    <i class="bi bi-save"></i> Save Settings
                                </button>
                            </div>
                        </EditForm>

                        @if (!string.IsNullOrEmpty(saveMessage))
                        {
                            <div class="alert @(saveSuccess ? "alert-success" : "alert-danger") mt-4">
                                <p class="text-primary-modern mb-0">@saveMessage</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
    }
</div>

@code {
    private WeatherApp.Client.Models.AlertSettings settings = new();
    private List<FavoriteCity> favoriteCities = new();
    private bool isLoading = true;
    private bool isSaving = false;
    private string? saveMessage;
    private bool saveSuccess;
    private string? currentUserId;
    private string? pushSubscriptionStatus;
    private bool isSubscribing = false;
    private bool isUnsubscribing = false;
    
    // Helper properties for nullable bindings
    private double? maxTemp { get => settings.MaxTemperature; set => settings.MaxTemperature = value; }
    private double? minTemp { get => settings.MinTemperature; set => settings.MinTemperature = value; }
    private double? maxWind { get => settings.MaxWindSpeed; set => settings.MaxWindSpeed = value; }
    private double? maxHumidity { get => settings.MaxHumidity; set => settings.MaxHumidity = value; }
    private double? minHumidity { get => settings.MinHumidity; set => settings.MinHumidity = value; }

    protected override async Task OnInitializedAsync()
    {
        var user = SupabaseService.GetCurrentUser();
        if (user != null && !string.IsNullOrEmpty(user.Id))
        {
            currentUserId = user.Id;
            settings = await AlertSettingsService.GetAlertSettingsAsync(currentUserId);
            favoriteCities = await FavoriteCitiesService.GetFavoriteCitiesAsync(currentUserId);
            
            // Initialize MonitoredCities if null
            if (settings.MonitoredCities == null)
            {
                settings.MonitoredCities = new List<string>();
            }
            
            // Always ensure all favorite cities are in MonitoredCities by default (checked)
            // Add any new favorite cities that aren't in the monitored list
            foreach (var favorite in favoriteCities)
            {
                var cityKey = $"{favorite.City}, {favorite.Country}";
                if (!settings.MonitoredCities.Contains(cityKey))
                {
                    settings.MonitoredCities.Add(cityKey);
                }
            }
            
            // Save updated settings if we added new cities
            if (favoriteCities.Any())
            {
                settings.UserId = currentUserId;
                await AlertSettingsService.SaveAlertSettingsAsync(settings);
            }

            // Check push subscription status
            await CheckPushSubscriptionStatus();
        }
        isLoading = false;
    }

    private async Task CheckPushSubscriptionStatus()
    {
        try
        {
            var isSupported = await PushNotificationService.IsSupportedAsync();
            if (!isSupported)
            {
                pushSubscriptionStatus = "not-supported";
                Console.WriteLine("Push notifications not supported in this browser");
                return;
            }

            var permissionStatus = await PushNotificationService.GetPermissionStatusAsync();
            Console.WriteLine($"Notification permission status: {permissionStatus}");
            
            if (permissionStatus != "granted")
            {
                pushSubscriptionStatus = "not-subscribed";
                return;
            }

            var subscription = await PushNotificationService.GetSubscriptionAsync();
            pushSubscriptionStatus = subscription != null ? "subscribed" : "not-subscribed";
            Console.WriteLine($"Subscription status: {pushSubscriptionStatus}");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error checking push subscription: {ex.Message}");
            Console.WriteLine($"Stack trace: {ex.StackTrace}");
            pushSubscriptionStatus = "error";
        }
    }

    private async Task OnPushNotificationToggle(ChangeEventArgs e)
    {
        var isChecked = e.Value?.ToString() == "True";
        settings.EnablePushNotifications = isChecked;
        
        // Just check status, don't auto-subscribe
        await CheckPushSubscriptionStatus();
    }

    private async Task SubscribeToPush()
    {
        if (string.IsNullOrEmpty(currentUserId))
        {
            Console.WriteLine("Cannot subscribe: currentUserId is null or empty");
            return;
        }

        isSubscribing = true;
        saveMessage = null;
        try
        {
            Console.WriteLine("Starting push notification subscription process...");
            
            // Check if already subscribed
            await CheckPushSubscriptionStatus();
            if (pushSubscriptionStatus == "subscribed")
            {
                Console.WriteLine("Already subscribed, saving settings...");
                // Already subscribed, just save settings
                await SaveSettings();
                return;
            }

            // Request permission first
            Console.WriteLine("Requesting notification permission...");
            var permissionGranted = await PushNotificationService.RequestPermissionAsync();
            if (!permissionGranted)
            {
                Console.WriteLine("Notification permission denied");
                settings.EnablePushNotifications = false;
                pushSubscriptionStatus = "not-subscribed";
                saveMessage = "Notification permission denied. Please enable notifications in your browser settings.";
                saveSuccess = false;
                StateHasChanged();
                return;
            }

            Console.WriteLine("Permission granted, subscribing to push...");
            // Subscribe
            try
            {
                var subscription = await PushNotificationService.SubscribeAsync(currentUserId);
                if (subscription != null)
                {
                    Console.WriteLine($"Successfully subscribed! Endpoint: {subscription.Endpoint}");
                    pushSubscriptionStatus = "subscribed";
                    // Keep checkbox checked since subscription succeeded
                    settings.EnablePushNotifications = true;
                    // Save settings with push notifications enabled
                    await SaveSettings();
                    saveMessage = "Web push notifications enabled! You'll receive alerts even when the app is closed.";
                    saveSuccess = true;
                }
                else
                {
                    throw new Exception("Subscription returned null");
                }
            }
            catch (Exception subEx)
            {
                Console.WriteLine($"Subscription error: {subEx.Message}");
                // Don't uncheck the checkbox - keep it checked so user can try again
                // settings.EnablePushNotifications = false; // Removed - keep checkbox checked
                pushSubscriptionStatus = "not-subscribed";
                saveMessage = $"Failed to enable push notifications: {subEx.Message}. Please check the browser console (F12) for more details. You can try subscribing again.";
                saveSuccess = false;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Exception during subscription: {ex.Message}");
            Console.WriteLine($"Stack trace: {ex.StackTrace}");
            // Don't uncheck the checkbox - keep it checked so user can try again
            // settings.EnablePushNotifications = false; // Removed - keep checkbox checked
            pushSubscriptionStatus = "not-subscribed";
            saveMessage = $"Error enabling notifications: {ex.Message}. Please check the browser console (F12) for details. You can try subscribing again.";
            saveSuccess = false;
        }
        finally
        {
            isSubscribing = false;
            StateHasChanged();
        }
    }

    private async Task UnsubscribeFromPush()
    {
        if (string.IsNullOrEmpty(currentUserId)) return;

        isUnsubscribing = true;
        saveMessage = null;
        try
        {
            var success = await PushNotificationService.UnsubscribeAsync(currentUserId);
            if (success)
            {
                pushSubscriptionStatus = "not-subscribed";
                settings.EnablePushNotifications = false;
                // Save settings with push notifications disabled
                await SaveSettings();
                saveMessage = "Web push notifications disabled.";
                saveSuccess = true;
            }
            else
            {
                saveMessage = "Failed to disable notifications. Please try again.";
                saveSuccess = false;
            }
        }
        catch (Exception ex)
        {
            saveMessage = $"Error disabling notifications: {ex.Message}";
            saveSuccess = false;
        }
        finally
        {
            isUnsubscribing = false;
            StateHasChanged();
        }
    }

    private async Task RequestNotificationPermission()
    {
        try
        {
            var permissionGranted = await PushNotificationService.RequestPermissionAsync();
            if (permissionGranted)
            {
                saveMessage = "Notification permission granted! You can now subscribe to push notifications.";
                saveSuccess = true;
                await CheckPushSubscriptionStatus();
            }
            else
            {
                saveMessage = "Notification permission denied. Please enable notifications in your browser settings.";
                saveSuccess = false;
            }
        }
        catch (Exception ex)
        {
            saveMessage = $"Error requesting permission: {ex.Message}";
            saveSuccess = false;
        }
        finally
        {
            StateHasChanged();
        }
    }

    private async Task SaveSettings()
    {
        if (string.IsNullOrEmpty(currentUserId)) return;

        isSaving = true;
        saveMessage = null;

        try
        {
            settings.UserId = currentUserId;
            var success = await AlertSettingsService.SaveAlertSettingsAsync(settings);
            
            if (success)
            {
                saveMessage = "Settings saved successfully!";
                saveSuccess = true;
            }
            else
            {
                saveMessage = "Failed to save settings. Please try again.";
                saveSuccess = false;
            }
        }
        catch (Exception ex)
        {
            saveMessage = $"Error: {ex.Message}";
            saveSuccess = false;
        }
        finally
        {
            isSaving = false;
        }
    }

    private void ToggleMonitoredCity(string cityKey, bool isMonitored)
    {
        // Ensure MonitoredCities list is initialized
        if (settings.MonitoredCities == null)
        {
            settings.MonitoredCities = new List<string>();
        }
        
        if (isMonitored && !settings.MonitoredCities.Contains(cityKey))
        {
            settings.MonitoredCities.Add(cityKey);
        }
        else if (!isMonitored)
        {
            settings.MonitoredCities.Remove(cityKey);
        }
    }

}

