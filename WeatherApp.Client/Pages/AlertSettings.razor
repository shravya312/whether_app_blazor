@page "/alerts/settings"
@attribute [Authorize]
@using WeatherApp.Client.Models
@using WeatherApp.Client.Services
@inject AlertSettingsService AlertSettingsService
@inject SupabaseService SupabaseService
@inject FavoriteCitiesService FavoriteCitiesService
@inject IJSRuntime JSRuntime

<PageTitle>Alert Settings - Weather App</PageTitle>

<div class="container mt-4">
    <h2 class="mb-4">Alert Settings</h2>
    
    @if (isLoading)
    {
        <div class="text-center">
            <div class="spinner-border"></div>
            <p class="mt-2">Loading settings...</p>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title mb-4">Custom Alert Thresholds</h5>
                        
                        <EditForm Model="@settings" OnValidSubmit="SaveSettings">
                            <DataAnnotationsValidator />
                            
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label class="form-label">Maximum Temperature (°C)</label>
                                    <input type="number" class="form-control" @bind="maxTemp" step="0.1" />
                                    <small class="text-muted">Alert when temperature exceeds this value</small>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Minimum Temperature (°C)</label>
                                    <input type="number" class="form-control" @bind="minTemp" step="0.1" />
                                    <small class="text-muted">Alert when temperature drops below this value</small>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label class="form-label">Maximum Wind Speed (m/s)</label>
                                    <input type="number" class="form-control" @bind="maxWind" step="0.1" />
                                    <small class="text-muted">Alert when wind speed exceeds this value</small>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Maximum Humidity (%)</label>
                                    <input type="number" class="form-control" @bind="maxHumidity" step="0.1" />
                                    <small class="text-muted">Alert when humidity exceeds this value</small>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Minimum Humidity (%)</label>
                                <input type="number" class="form-control" @bind="minHumidity" step="0.1" />
                                <small class="text-muted">Alert when humidity drops below this value</small>
                            </div>

                            <hr />

                            <h6 class="mb-3">Weather Condition Alerts</h6>
                            
                            <div class="mb-3">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" @bind="settings.EnableThunderstormAlerts" />
                                    <label class="form-check-label">Enable Thunderstorm Alerts</label>
                                </div>
                            </div>

                            <div class="mb-3">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" @bind="settings.EnableHeavyRainAlerts" />
                                    <label class="form-check-label">Enable Heavy Rain Alerts</label>
                                </div>
                            </div>

                            <div class="mb-3">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" @bind="settings.EnableHeavySnowAlerts" />
                                    <label class="form-check-label">Enable Heavy Snow Alerts</label>
                                </div>
                            </div>

                            <hr />

                            <h6 class="mb-3">Notification Preferences</h6>
                            
                            <div class="mb-3">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" @bind="settings.EnablePushNotifications" />
                                    <label class="form-check-label">Enable Browser Push Notifications</label>
                                </div>
                                <small class="text-muted">Receive alerts as browser notifications</small>
                            </div>

                            <div class="mb-3">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" @bind="settings.EnableEmailNotifications" />
                                    <label class="form-check-label">Enable Email Notifications</label>
                                </div>
                                <small class="text-muted">Email notifications require backend configuration</small>
                            </div>

                            <hr />

                            <h6 class="mb-3">Monitored Cities</h6>
                            <div class="alert alert-info">
                                <p class="mb-0">
                                    <strong>✅ Email notifications work for ALL cities you search.</strong> The system automatically checks all cities for weather alerts and sends email notifications when alerts trigger.
                                </p>
                                <p class="mb-0 mt-2">
                                    <small>Below, you can select specific favorite cities to prioritize. <strong>All new cities are checked by default</strong> - they will receive email alerts automatically.</small>
                                </p>
                            </div>
                            
                            @if (favoriteCities.Any())
                            {
                                <p class="text-muted mt-3">Select specific favorite cities to monitor (all are checked by default):</p>
                                <div class="mb-3">
                                    @foreach (var city in favoriteCities)
                                    {
                                        var cityKey = $"{city.City}, {city.Country}";
                                        // Default to true (monitored/checked) - all cities checked by default
                                        // If MonitoredCities is empty, all are monitored. Otherwise check if city is in list.
                                        var isMonitored = settings.MonitoredCities == null || 
                                                         !settings.MonitoredCities.Any() || 
                                                         settings.MonitoredCities.Contains(cityKey);
                                        <div class="form-check mb-2">
                                            <input type="checkbox" class="form-check-input" 
                                                   checked="@isMonitored"
                                                   @onchange="@((ChangeEventArgs e) => ToggleMonitoredCity(cityKey, e.Value?.ToString() == "True"))" />
                                            <label class="form-check-label">@cityKey</label>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <p class="text-muted">No favorite cities yet. All cities you search will be automatically monitored for alerts.</p>
                            }

                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary" disabled="@isSaving">
                                    @if (isSaving)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2"></span>
                                    }
                                    Save Settings
                                </button>
                                <button type="button" class="btn btn-outline-secondary" @onclick="RequestNotificationPermission">
                                    Request Notification Permission
                                </button>
                            </div>
                        </EditForm>

                        @if (!string.IsNullOrEmpty(saveMessage))
                        {
                            <div class="alert @(saveSuccess ? "alert-success" : "alert-danger") mt-3">
                                @saveMessage
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private WeatherApp.Client.Models.AlertSettings settings = new();
    private List<FavoriteCity> favoriteCities = new();
    private bool isLoading = true;
    private bool isSaving = false;
    private string? saveMessage;
    private bool saveSuccess;
    private string? currentUserId;
    
    // Helper properties for nullable bindings
    private double? maxTemp { get => settings.MaxTemperature; set => settings.MaxTemperature = value; }
    private double? minTemp { get => settings.MinTemperature; set => settings.MinTemperature = value; }
    private double? maxWind { get => settings.MaxWindSpeed; set => settings.MaxWindSpeed = value; }
    private double? maxHumidity { get => settings.MaxHumidity; set => settings.MaxHumidity = value; }
    private double? minHumidity { get => settings.MinHumidity; set => settings.MinHumidity = value; }

    protected override async Task OnInitializedAsync()
    {
        var user = SupabaseService.GetCurrentUser();
        if (user != null && !string.IsNullOrEmpty(user.Id))
        {
            currentUserId = user.Id;
            settings = await AlertSettingsService.GetAlertSettingsAsync(currentUserId);
            favoriteCities = await FavoriteCitiesService.GetFavoriteCitiesAsync(currentUserId);
            
            // Initialize MonitoredCities if null
            if (settings.MonitoredCities == null)
            {
                settings.MonitoredCities = new List<string>();
            }
            
            // Always ensure all favorite cities are in MonitoredCities by default (checked)
            // Add any new favorite cities that aren't in the monitored list
            foreach (var favorite in favoriteCities)
            {
                var cityKey = $"{favorite.City}, {favorite.Country}";
                if (!settings.MonitoredCities.Contains(cityKey))
                {
                    settings.MonitoredCities.Add(cityKey);
                }
            }
            
            // Save updated settings if we added new cities
            if (favoriteCities.Any())
            {
                settings.UserId = currentUserId;
                await AlertSettingsService.SaveAlertSettingsAsync(settings);
            }
        }
        isLoading = false;
    }

    private async Task SaveSettings()
    {
        if (string.IsNullOrEmpty(currentUserId)) return;

        isSaving = true;
        saveMessage = null;

        try
        {
            settings.UserId = currentUserId;
            var success = await AlertSettingsService.SaveAlertSettingsAsync(settings);
            
            if (success)
            {
                saveMessage = "Settings saved successfully!";
                saveSuccess = true;
            }
            else
            {
                saveMessage = "Failed to save settings. Please try again.";
                saveSuccess = false;
            }
        }
        catch (Exception ex)
        {
            saveMessage = $"Error: {ex.Message}";
            saveSuccess = false;
        }
        finally
        {
            isSaving = false;
        }
    }

    private void ToggleMonitoredCity(string cityKey, bool isMonitored)
    {
        // Ensure MonitoredCities list is initialized
        if (settings.MonitoredCities == null)
        {
            settings.MonitoredCities = new List<string>();
        }
        
        if (isMonitored && !settings.MonitoredCities.Contains(cityKey))
        {
            settings.MonitoredCities.Add(cityKey);
        }
        else if (!isMonitored)
        {
            settings.MonitoredCities.Remove(cityKey);
        }
    }

    private async Task RequestNotificationPermission()
    {
        try
        {
            await JSRuntime.InvokeVoidAsync("eval", 
                "if ('Notification' in window && Notification.permission === 'default') { Notification.requestPermission(); }");
            saveMessage = "Notification permission requested. Please check your browser settings.";
            saveSuccess = true;
        }
        catch (Exception ex)
        {
            saveMessage = $"Error requesting permission: {ex.Message}";
            saveSuccess = false;
        }
    }
}

