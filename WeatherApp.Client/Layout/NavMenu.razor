<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid d-flex align-items-center">
        <i class="bi bi-cloud-sun-fill me-2" style="font-size: 1.5rem;"></i>
        <a class="navbar-brand fw-bold" href="">WeatherApp</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column nav-scrollable">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <i class="bi bi-house-door-fill"></i> <span>Home</span>
            </NavLink>
        </div>
        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="dashboard">
                        <i class="bi bi-speedometer2"></i> <span>Dashboard</span>
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="analytics">
                        <i class="bi bi-graph-up"></i> <span>Analytics</span>
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="profile">
                        <i class="bi bi-person-circle"></i> <span>Profile</span>
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="alerts/settings">
                        <i class="bi bi-bell"></i> <span>Alert Settings</span>
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="alerts/history">
                        <i class="bi bi-clock-history"></i> <span>Alert History</span>
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="global-cities">
                <i class="bi bi-globe"></i> <span>Global Cities</span>
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="users">
                <i class="bi bi-people"></i> <span>Users</span>
            </NavLink>
        </div>
    </nav>
</div>

<style>
    /* Force alignment with highest specificity */
    .nav-item ::deep a {
        display: flex !important;
        align-items: center !important;
        line-height: 1 !important;
    }
    
    .nav-item ::deep a i {
        display: inline-flex !important;
        align-items: center !important;
        justify-content: center !important;
        width: 1.5rem !important;
        height: 1.2rem !important;
        line-height: 1.2rem !important;
        margin: 0 !important;
        padding: 0 !important;
        vertical-align: middle !important;
    }
    
    .nav-item ::deep a span {
        display: inline-flex !important;
        align-items: center !important;
        line-height: 1.2rem !important;
        height: 1.2rem !important;
        margin: 0 !important;
        padding: 0 !important;
        vertical-align: middle !important;
        color: #ffffff !important;
    }
</style>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
