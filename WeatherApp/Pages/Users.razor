@page "/users"
@attribute [Authorize]
@using Supabase.Gotrue
@inject SupabaseService SupabaseService
@inject SupabaseAuthStateProvider AuthStateProvider

<PageTitle>Registered Users</PageTitle>

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">Registered Users</h2>
            
            @if (isLoading)
            {
                <div class="text-center">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-2">Loading users...</p>
                </div>
            }
            else if (errorMessage != null)
            {
                <div class="alert alert-danger">@errorMessage</div>
            }
            else if (users != null && users.Any())
            {
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Email</th>
                                        <th>User ID</th>
                                        <th>Created At</th>
                                        <th>Last Sign In</th>
                                        <th>Email Confirmed</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in users)
                                    {
                                        <tr>
                                            <td>@user.Email</td>
                                            <td><small class="text-muted">@user.Id</small></td>
                                            <td>@(user.CreatedAt?.ToString("g") ?? "N/A")</td>
                                            <td>@(user.LastSignInAt?.ToString("g") ?? "Never")</td>
                                            <td>
                                                @if (user.EmailConfirmedAt.HasValue)
                                                {
                                                    <span class="badge bg-success">Confirmed</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">Pending</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="mt-3">
                            <p class="text-muted">
                                <strong>Total Users:</strong> @users.Count
                            </p>
                    <div class="mt-3">
                        <p class="text-muted small mb-2">
                            <strong>Note:</strong> This shows the current logged-in user only.
                        </p>
                        <a href="https://supabase.com/dashboard/project/wdzfgezvxydmmcyybnet/auth/users" 
                           target="_blank" 
                           class="btn btn-primary btn-sm">
                            <i class="bi bi-box-arrow-up-right"></i> View All Users in Supabase Dashboard
                        </a>
                    </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <p>No users found in the current session.</p>
                    <div>
                        <p class="mb-3">
                            <strong>To view all registered users:</strong>
                        </p>
                        <div class="d-flex flex-column gap-2">
                            <a href="https://supabase.com/dashboard/project/wdzfgezvxydmmcyybnet/auth/users" 
                               target="_blank" 
                               class="btn btn-primary">
                                <i class="bi bi-box-arrow-up-right"></i> Open Supabase Users Dashboard
                            </a>
                            <small class="text-muted">
                                Or manually: Dashboard → Authentication → Users
                            </small>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private List<UserInfo>? users;
    private bool isLoading = true;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadUsersAsync();
    }

    private async Task LoadUsersAsync()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            // Get current user
            var currentUser = SupabaseService.GetCurrentUser();
            if (currentUser != null)
            {
                users = new List<UserInfo>
                {
                    new UserInfo
                    {
                        Email = currentUser.Email ?? "N/A",
                        Id = currentUser.Id ?? string.Empty,
                        CreatedAt = currentUser.CreatedAt,
                        LastSignInAt = currentUser.LastSignInAt,
                        EmailConfirmedAt = currentUser.EmailConfirmedAt
                    }
                };
            }
            else
            {
                users = new List<UserInfo>();
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading users: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private class UserInfo
    {
        public string Email { get; set; } = string.Empty;
        public string Id { get; set; } = string.Empty;
        public DateTime? CreatedAt { get; set; }
        public DateTime? LastSignInAt { get; set; }
        public DateTime? EmailConfirmedAt { get; set; }
    }
}

